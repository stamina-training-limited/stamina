<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/comment1ProfilePic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/profilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/feedEntry2DateAndLocation_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Muy buen entreno Christine!"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/feedEntry2Name_tv3"
        app:layout_constraintTop_toBottomOf="@+id/feedEntry2Name_tv3" />

    <TextView
        android:id="@+id/feedEntry2Name_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:text="Teresa Molina"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/comment1ProfilePic_iv"
        app:layout_constraintTop_toTopOf="@+id/comment1ProfilePic_iv" />

    <ImageView
        android:id="@+id/keyboard_iv"
        android:layout_width="541dp"
        android:layout_height="252dp"
        android:layout_marginStart="-74dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/feed_keyboard"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/comment_pt"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Texto publicaciÃ³n"
        android:inputType="textPersonName"
        android:textColor="@color/gris_stamina"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/keyboard_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/publish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="3dp"
        android:text="Publicar"
        android:textAllCaps="false"
        app:backgroundTint="@color/grisOscuro_stamina"
        app:layout_constraintBottom_toTopOf="@+id/keyboard_iv"
        app:layout_constraintStart_toEndOf="@+id/comment_pt" />

</androidx.constraintlayout.widget.ConstraintLayout>