<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mock_map_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".routes.RouteInProgress">

    <TextView
        android:id="@+id/routeConcreteWhiteBackground_tv"
        android:layout_width="407dp"
        android:layout_height="146dp"
        android:layout_marginTop="586dp"
        android:alpha="0.75"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:background="@drawable/style_start_button"
        android:text="@string/stop"
        android:textSize="8pt"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:text="@string/duration"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864" />

    <TextView
        android:id="@+id/distance_tv"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:text="@string/distance"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration_tv" />

    <TextView
        android:id="@+id/routeConcreteSpeed_tv"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/speed"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distance_tv" />

    <TextView
        android:id="@+id/duration_time_tv"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:text="00:46:15"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/routeConcreteWhiteBackground_tv"
        app:layout_constraintStart_toEndOf="@+id/duration_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852" />

    <TextView
        android:id="@+id/distance_km_tv"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:layout_marginStart="2dp"
        android:text="9.450 Km"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/routeConcreteWhiteBackground_tv"
        app:layout_constraintStart_toEndOf="@+id/routeConcreteSpeed_tv"
        app:layout_constraintTop_toBottomOf="@+id/speed_kmh_tv"
        app:layout_constraintVertical_bias="0.714" />

    <TextView
        android:id="@+id/speed_kmh_tv"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:layout_marginBottom="52dp"
        android:text="11.2 Km/h"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/distance_tv"
        app:layout_constraintTop_toBottomOf="@+id/duration_time_tv"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>